<table class="table">
  <thead>
    <tr>
      <th>File</th>
      <th>Modified</th>
      <th>Size</th>
      <th>Copy to Clipboard</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.files}}
      <tr>
        <td><a {{bind-attr href=url}}>{{name}}</a></td>
        <td>{{format-date-time lastModified "LLL"}}</td>
        <td>{{format-bytes size}}</td>
        <td>{{copy-clipboard label="Url" text=url}} | {{copy-clipboard label="Script Tag" text=scriptTag}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
